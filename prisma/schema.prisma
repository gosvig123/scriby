generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int          @id @unique @default(autoincrement())
  email         String       @unique
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt()
  authMethods   AuthMethod[]
  authlink      AuthLink?
  sessionId     String?
}

// This is a table to store authentication methods associated with a user.
model AuthMethod {
  id        Int      @id @unique @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  type      AuthType @map(name: "auth_type") // Google, Email, etc.
  password  String?  // If the type is Email, this is where the hashed password would be stored.
  uniqueId  String?  // If the type is Google, this could store Google's unique user id.
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

// Using an Enum to represent different types of authentication methods.
enum AuthType {
  GOOGLE
  EMAIL
  OTHER // You can add more types in the future
}

model AuthLink {
  id         String    @id @unique  @default(uuid())
  userId     Int?      @unique
  user       User?     @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt()
}
